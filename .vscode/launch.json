    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch canpi-ssr",
            "cargo": {
                "args": [
                    "build"
                ]
            },
            "cwd": "${workspaceFolder}",
            "program": "${cwd}/target/debug/canpi-ssr",
            "env": {
                "CPSSR_HOME": "${cwd}",
                "HOST_PORT": "0.0.0.0:8080"
            }
        }
    ]
}